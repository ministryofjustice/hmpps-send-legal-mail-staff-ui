{% extends "layout.njk" %}
{% from "../components/card/card.njk" import card %}

{% set pageTitle = "Home - " + applicationName + " - DPS" %}
{% set pageId = 'index-page' %}

{% block content %}

 <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-l">{{ applicationName }}</h1>
        <ul class="govuk-grid-row card-group">
          {% for tile in tiles %}
            <li class="govuk-grid-column-one-third card-group__item">
              {{ card({
                "href": tile.href,
                "clickable": "true",
                "heading": tile.heading,
                "description": tile.description,
                "id": tile.id
              }) }}
            </li>
          {% endfor %}
        </ul>
    </div>
  </div>

{% endblock %}
